<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Girls Students Enrolled in Class" />

        <EditText
            android:id="@+id/stdregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number"
            android:inputType="number"
            android:maxLength="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Girls Students Present in Class" />

        <EditText
            android:id="@+id/stdpresent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Count"
            android:inputType="number"
            android:maxLength="3" />

        <TextView
            android:id="@+id/girlsinboystxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Boys student Enrolled in Class"
            android:visibility="visible" />

        <EditText
            android:id="@+id/grlsinboys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Count"
            android:inputType="number"
            android:maxLength="3"
            android:visibility="visible" />

        <TextView
            android:id="@+id/boysingirlstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Boys student Present in Class"
            android:visibility="visible" />

        <EditText
            android:id="@+id/boysingils"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Count"
            android:inputType="number"
            android:maxLength="3"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Back" />

</RelativeLayout>